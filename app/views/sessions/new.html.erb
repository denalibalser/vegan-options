<%= form_tag('/signin', method: :post) do %>

    <div class="form-group">
      <%= label_tag :username %>
  
      <%= text_field_tag :'user[username]' %>
    </div>
  
    <div class="form-group">
     
   
        <%= label_tag :password_digest, 'Password' %>
        <%= password_field_tag :'user[password_digest]' %>

    </div>
  
    <div class="actions">
      <%= submit_tag("Sign In") %>
    </div>
  <% end %> 