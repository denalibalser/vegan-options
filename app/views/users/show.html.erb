<div class="profile">
    <h1>Hey, <%= @user.first_name %>!</h1>
    <p>Username: <%=@user.username %></p>
    <p>Email: <%= @user.email %></p>
</div>

<div class="edit_user">
    <%= link_to "Edit Profile", edit_user_path(@user) %>
</div>

<div class="user_restaurants">
<% if @restaurants != nil %>
    <ul>
    <h3> Your Restaurant Submissions: </h3> <%# need to figure out how to have this display only if user has restaurants %>
    <% @restaurants.each do |restaurant| %>
        <% if restaurant.user_id == @user.id %> 
            <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        <% end %>
    <% end %>
    </ul>
<% else %>
        <p>Be the First to Submit a Restaurant!</p>
<% end %> 
</div>


    