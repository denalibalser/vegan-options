<!DOCTYPE html>
<html>
  <head>
    <title>VeganOptions</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div id="flash">
        <%= msg %>
      </div>
    <% end %>

    
      <% if logged_in? %>
        <div class="nav">
          <br>
          <%= link_to  "Profile", user_path(current_user)%>
          <%= link_to "List of States", states_path %>
          <%= link_to "Create Restaurant", new_user_restaurant_path(current_user) %>
          <%= link_to "Log Out", logout_path %>
        </div>
      <% elsif !logged_in? %>
      <div class="nav">
          <br>
          <%= link_to "Sign Up", new_user_path %>
          <%= link_to "Sign In", signin_path %>
          <%= link_to "Log Out", logout_path %>
      </div>
      <% end %>

    <%= yield %>

    

  </body>

  <div class="footer">
      <% if logged_in? %>
        <p>Signed in as: <%= current_user.username %></p>
      <% elsif !logged_in? %>
        <p> Welcome! </p> 
      <% end %>
  </div>

</html>
