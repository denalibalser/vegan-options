    <h3>Search Restaurants</h3>
    
    <%= form_for(states_path, method: "get") do %>
        
        <%= text_field_tag(:search, params[:search], placeholder: "Search Restaurants") %>
        <%= submit_tag("Search") %>
    <% end %>
    
    <ul>
    <% if @restaurants.any? %>
        <% @restaurants.each do |r| %>
            <% if r.name == params[:search] %>
                <li><%= link_to r.name, restaurant_path(r) %></li>
            <% end %>
        <% end %>
    <% end %>
    </ul>