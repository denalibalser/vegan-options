
<%= form_for @restaurant do |f| %> 
   
    <div class="form-group">
      <%= f.label :name, "Name:" %>
      <br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :description, "Description:" %>
      <br>
      <%= f.text_field :description, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :address, "Address:" %>
      <br>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :phone_number, "Phone Number:" %>
      <br>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :vegan_friendliness_rating, "Vegan Friendliness Rating (Choose a number 1-10, with 1 being limited options and 10 being a full plant-based menu):" %>
      <br>
      <%= f.number_field :vegan_friendliness_rating, min: 0, max:10, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :price_rating, "Price Rating (Choose a number 1-5, with 1 being less expensive and 5 being most):" %>
      <br>
      <%= f.number_field :price_rating, min: 0, max: 5, class: "form-control" %>
    </div>

    <br>
      <%= f.label :state_id, "In which state is this restaurant located?" %>  <%# want default value of drop-down menu to be blank, ie not the name of the first state %>
      <br>
      <%= f.collection_select(:state_id, State.all, :id, :name) %>
    <br>
  
    <div class="actions">
      <br/>
      <%= f.submit 'Create Restaurant', class: "btn btn-primary" %>
    </div>
  
<% end %> 