<%= form_for @restaurant do |f| %>
  
    <div class="form-group">
      <%= f.label :name, "Name:" %>
      <br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :description, "Description:" %>
      <br>
      <%= f.text_field :description, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :address, "Address:" %>
      <br>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :phone_number, "Phone Number:" %>
      <br>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :vegan_friendliness_rating, "Vegan Friendliness Rating (1-10):" %>
      <br>
      <%= f.number_field :vegan_friendliness_rating, min: 0, max:10, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= f.label :price_rating, "Price Rating (1-5):" %>
      <br>
      <%= f.number_field :price_rating, min: 0, max: 5, class: "form-control" %>
    </div>
  
    <div class="actions">
      <br/>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  
<% end %> 